<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/GAME_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_title"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="@string/GAME_c_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_c_left"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:text="@string/GAME_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_time"
            android:textStyle="normal|bold"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:stretchMode="spacingWidthUniform"
            android:gravity="center"
            android:background="@color/ColorTittle_Middle">
        </GridView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/GAME_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_turn"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/GAME_score_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game_score_player"
            android:layout_weight="4"
            android:textSize="18sp"
            android:textColor="@color/colorPLAYER"
            android:background="@color/colorCPU"
            android:textStyle="normal|bold"
            android:paddingStart="5dp"
            android:gravity="center" />
        <TextView
            android:text="@string/GAME_score_cpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game_score_cpu"
            android:layout_weight="3.5"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorCPU"
            android:background="@color/colorPLAYER"
            android:paddingStart="5dp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>